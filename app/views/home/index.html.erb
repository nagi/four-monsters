<div class="logo">
  <%= image_tag asset_path('4MONSTERSlogo.png') %>
</div>
<h3>Choose your player...</h3>
  <div class="monsters">
    <div class="card redcard">
      <a href="redmonster.html" class="red">The Red Monster</a>
    </div>
    <div class="card bluecard">
      <a href="bluemonster.html" class="blue">The Blue Monster</a>
    </div>
    <div class="card greencard">
      <a href="greenmonster.html" class="green">The Green Monster</a>
    </div>
    <div class="card purplecard">
      <a href="purplemonster.html" class="purple">The Purple Monster</a>
    </div>
  </div>
<h3 class="banner">This game is still in development, sign up here to receive the latest updates!</h3>

<div class="form">
  <%= form_for Subscriber.new do |f| %>
    <div class="email">
      <%= f.email_field :email, placeholder: "Email" %>
    </div>
    <div class="submit">
      <%= f.submit value: "Subscribe" %>
    </div>
  <% end %>
</div>
